grid=${HOME}/grid

if [ -n "${1}" ]
then
    rel=${1}
else
    echo
    echo "Usage: `basename ${0}` rXXXXX"
    echo
    exit 1
fi

cd ${grid}/tmp
if [ ! -f "../dist/opensim-${rel}.tgz" ]
then
    echo
    echo "ERROR: opensim-${rel}.tgz does not exist."
    echo
    exit 1
elif [ -d "opensim-${rel}" ]
then
    echo
    echo "ERROR: opensim-${rel} appears to be deployed already."
    echo
    exit 1
else
    tar xzf ../dist/opensim-${rel}.tgz
fi
