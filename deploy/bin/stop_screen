region_names="s01 s02 s03 s04 s05 s06 s07 s08 s09 s10"
wait_seconds=1

for region in ${region_names}
do
    screen -X -S OpenSim -p ${region} stuff "exit
"
    sleep ${wait_seconds}
done
screen -X -S OpenSim -p 0 stuff "exit
"
